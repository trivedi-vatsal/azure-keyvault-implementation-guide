{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the Key Vault"
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]",
      "metadata": {
        "description": "Tenant ID for the Key Vault"
      }
    },
    "softDeleteRetentionDays": {
      "type": "int",
      "defaultValue": 90,
      "minValue": 7,
      "maxValue": 90,
      "metadata": {
        "description": "Soft delete retention period in days"
      }
    },
    "enablePurgeProtection": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable purge protection"
      }
    },
    "enableRbacAuthorization": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable RBAC authorization"
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "standard",
      "allowedValues": ["standard", "premium"],
      "metadata": {
        "description": "SKU name for the Key Vault"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to the Key Vault"
      }
    }
  },
  "variables": {
    "vaultResourceId": "[resourceId('Microsoft.KeyVault/vaults', parameters('vaultName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2021-10-01",
      "name": "[parameters('vaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[parameters('tenantId')]",
        "sku": {
          "family": "A",
          "name": "[parameters('skuName')]"
        },
        "enableRbacAuthorization": "[parameters('enableRbacAuthorization')]",
        "enablePurgeProtection": "[parameters('enablePurgeProtection')]",
        "softDeleteRetentionInDays": "[parameters('softDeleteRetentionDays')]",
        "networkAcls": {
          "defaultAction": "Deny",
          "bypass": "AzureServices"
        }
      },
      "tags": "[parameters('tags')]"
    }
  ],
  "outputs": {
    "vaultId": {
      "type": "string",
      "value": "[variables('vaultResourceId')]"
    },
    "vaultUri": {
      "type": "string",
      "value": "[reference(variables('vaultResourceId')).vaultUri]"
    }
  }
}
